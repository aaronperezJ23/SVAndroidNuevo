<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:src="@drawable/error"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_gravity="center_vertical"
            android:text="@string/nombre"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textKms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/textNom"
            android:text="@string/kilometros"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/textValoracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/textKms"
            android:text="@string/valoracion"/>
        <TextView
            android:id="@+id/textCercania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/textValoracion"
            android:text="Distancia"/>
    </RelativeLayout>
</LinearLayout>
