<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_margin="5dp"
        android:layout_weight="0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/nombre"
            android:textColor="#333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textKms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNom"
            android:layout_gravity="center_vertical"
            android:text="@string/kilometros"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textKms"
            android:layout_gravity="center_vertical"
            android:text="@string/categoria"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCategoria"
            android:layout_gravity="center_vertical"
            android:text="@string/inicio"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInicio"
            android:layout_gravity="center_vertical"
            android:text="@string/fin"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textFin"
            android:layout_gravity="center_vertical"
            android:text="@string/temp"
            android:textColor="#333"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTemp"
            android:layout_gravity="center_vertical"
            android:textColor="#333"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ver_en_mapa" />
        <Button
            android:id="@+id/botonFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar_fav" />
    </LinearLayout>

</LinearLayout>
