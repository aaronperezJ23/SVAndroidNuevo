<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/nombre"
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/imageViewSeparator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/lineaseparadora"
            />

        <TextView
            android:id="@+id/textKms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/kilometros"
            android:layout_marginTop="30dp"
            android:textColor="#333"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/categoria"
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/inicio"
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/fin"
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imagenTiempo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher_background"
                />
            <TextView
                android:id="@+id/textTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/temp"
                android:textColor="#333"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/botonMapa"
            android:background="@drawable/redondeoboton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ver_en_mapa"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/rutal"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/botonFav"
            android:background="@drawable/redondeoboton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar_fav"
            android:drawableRight="@drawable/estrella"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>
